<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Logout Button -->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:src="@drawable/logout"
        android:backgroundTint="#C7CA7C"
        android:id="@+id/btnLogout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="Logout"
        android:fontFamily="@font/generalsans_semibold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultprofile"
            app:shapeAppearanceOverlay="@style/roundImageView" />

        <TextView
            android:layout_below="@+id/profileImage"
            android:text="Name: "
            android:id="@+id/textNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/generalsans_semibold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/profileImage"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/textNameView"
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25sp"
        android:fontFamily="@font/generalsans_semibold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textName"
            android:text="Email: "
            android:id="@+id/textEmailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:fontFamily="@font/generalsans_semibold"/>

    <TextView
        android:layout_alignStart="@+id/textName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textName"
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:fontFamily="@font/generalsans_semibold"/>

        <TextView
            android:id="@+id/textUserTypeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textEmail"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/generalsans_semibold"
            android:text="User Type: "
            android:textSize="20sp" />

        <TextView
        android:layout_alignStart="@+id/textEmail"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textEmail"
        android:id="@+id/textUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type"
        android:textSize="18sp"
        android:fontFamily="@font/generalsans_semibold"/>

    <!-- Edit Profile Button -->
    <Button
        android:padding="10dp"
        android:backgroundTint="#C7CA7C"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textUserType"
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/generalsans_semibold"
        android:text="Edit Profile"/>
    </RelativeLayout>


</LinearLayout>